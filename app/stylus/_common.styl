body, *
  margin 0
  padding 0

h1
  font-size 3em
  font-family 'circular', arial, sans-serif
  font-weight 400

h2
  font-size 1.875em
  font-family 'circular', arial, sans-serif

h3
  font-size 1.625em
  font-family 'circular', arial, sans-serif

h4
  font-family 'circular', arial, sans-serif
  font-size: 24px;
  color: #7F878A;
  letter-spacing: 0.4px;
  font-weight 100

h5
  font-size 16px
  text-align: center;
  font-family 'circular', arial, sans-serif

h6
  font-size 1em
  font-weight 600
  font-family 'circular', arial, sans-serif

p
  font-size 14px
  font-family 'circular', arial, sans-serif
  line-height 1.575em
  font-weight 300

a
  font-size 14px
  font-family 'circular', arial, sans-serif
  line-height 1.575em
  font-weight 300
  color #595959

li
  font-size 1em
  font-family 'circular', arial, sans-serif
  line-height 1.4em
  font-weight 300
  color #595959

small
  font-size 0.8em
  font-family 'circular', arial, sans-serif
  line-height 1.12em
  font-weight 300
  color #595959

/* colours */
placeholderGrey = #CAD7DC

.container
  width 1024px
  margin 0 auto
  overflow hidden
  padding-bottom: 40px;

.grid-4
  width 33%
  height 150px
  float left
  display inline

.grid-6
  display: block;
  width: 64%;
  margin: 0 auto;
  float: initial;
  margin-bottom 40px
  h5, p
    text-align left

.avatar
  width 45px
  height 45px
  background-color #B2BFC3
  float left
  margin-top 24px
  border-radius 40px

.btn-reg
  padding 10px 50px
  width 130px
  border-radius 100px
  text-align center
  border 1px solid #CEDBDB
  font-size: 14px;
  color: #0481BF;
  letter-spacing: 0.26px;
  text-decoration: none;

.btn-white
  background-color #fff
  a
    color #595959
    text-decoration none
    padding: 12px 30px 12px 30px;

.btn-white:hover
  background-color placeholderGrey
  a
    color #fff

.footer
  width 100%
  height 60px
  background-color #515C66;
  overflow hidden
  p
    text-align center
    margin-top 20px
    color #fff

tabletQuery = "screen and (max-width: 1023px)"
mobileQuery = "screen and (max-width:767px)"
retinaQuery = "only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min--moz-min-device-pixel-ratio: 1.5), only screen and (min-resolution: 240ppx), "
