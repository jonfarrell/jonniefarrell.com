.mobile-nav
  display none

.desktop-nav
  width 100%
  background-color #fff
  height 70px
  position fixed
  border-bottom 1px solid #BFBFBF
  z-index 2
  top: 0;
  .nav-wrapper
    width 1024px
    margin 0 auto
    .nav-logo
      background-image url("../images/nav-logo.svg")
      width 166px
      height 23px
      display inline-block
      margin-top 17px
    ul
      float right
      li
        display inline
        float left
        padding-top 15px
        a
          padding: 26px 17px 26px 17px;
          text-decoration: none;
          font-size: 14px;
          color: #b2bfc3;
          letter-spacing: .4px;
          line-height: 41px;
        a:hover
          background-color placeholderGrey
          color #3A3D3E

@media only screen and (max-width: 1023px)
  .desktop-nav
      display none
    .mobile-nav
      display block
      width: 100%;
      height: 60px;
      background-color: white;
      border-bottom 1px solid #BFBFBF
      z-index 2
      position fixed
      top 0
      .nav-logo
        background-image url("../images/nav-logo.svg")
        width 166px
        height 23px
        display inline-block
        margin-top 18px
        margin-left 18px
      .menu-btn
        float right
        padding 18px
      .menu-btn div
        position absolute
        left 100%
        top 64%
        padding-right 8px
        margin-top -0.50em
        line-height 1.2
        font-size 18px
        font-weight 200
        vertical-align middle
        z-index 99

      .menu-btn span
        display block
        width 19px
        height 3px
        margin 4px 0
        background rgb(0,0,0)
        z-index 99

      .responsive-menu
        display none

      .expand
        display block !important

      .responsive-menu.expand
        ul
          position absolute
          margin 0
          padding 0
          overflow hidden
          width 100%
          margin-top 15px
          z-index 2
          li
            list-style-type none
            background-color #fff
            width 100%
            padding 30px 0px
            border-bottom 1px solid #BFBFBF
            text-align center
          a
            padding: 30px 110px;
            text-decoration: none;
            font-size: 14px;
            color: #b2bfc3;
            letter-spacing: .4px;
            line-height: 26px;
    .header
      .mobile-nav
        display block
