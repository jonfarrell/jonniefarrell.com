.pricing
  display block
  width 100%;
  background-color #f5f9fb
  .container
    padding-bottom 250px
    .pricing-wrapper
      width: 730px;
      margin: 0 auto;
      h4
        margin-top 150px
        text-align center
        margin-bottom 100px
      .price-box
        background: #FFFFFF;
        box-shadow: 0 1px 2px 0 rgba(171,171,171,0.50);
        border-radius: 12px;
        width 297px
        float left
        margin-left 14px
        margin-top 15px
        padding-bottom 30px
        h5
          margin-top 20px
        ul
          margin-left 30px
          margin-top 20px
          li
            margin-top 12px
        h1
          text-align center
          margin-top 40px
        .btn-wrap
          width: 190px;
          margin: 0 auto;
          margin-top: 30px
      .price-box-lrg
        background: #FFFFFF;
        box-shadow: 0 1px 2px 0 rgba(171,171,171,0.50);
        border-radius: 12px;
        width 345px
        float left
        margin-left 20px
        padding-bottom 40px
        h5
          margin-top 25px
        ul
          margin-left 30px
          margin-top 20px
          li
            margin-top 12px
        h1
          text-align center
          margin-top 60px
        .btn-wrap
          width: 190px;
          margin: 0 auto;
          margin-top: 30px

.male-img, .female-img
  width: 100%;
  height 181px
  background-color #cad7dc
  border-radius 4px 4px 0px 0px

.male-img
  background-image url('../images/male-transformation.png')
  background-size cover
.female-img
  background-image url('../images/female-transformation.png')
  background-size cover


@media only screen and (max-width: 1023px)
  .pricing
    .container
      width 100%

@media only screen and (max-width: 767px)
  .pricing
    .container
      width 100%
      .pricing-wrapper
        width 100%
        .price-box-lrg
          width 90%
          margin 0 auto
          float initial
          display block
          margin-bottom 50px
          ul
            position: relative;
            display: block;
            float: initial;
            width: 75%;
            margin: 0 auto;
          .male-img, .female-img
            height 250px

@media only screen and (max-width: 420px)
  .pricing
    .container
      .pricing-wrapper
        .price-box-lrg
          .male-img, .female-img
            height 180px
            background-position-y 0
