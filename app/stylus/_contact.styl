.contact
  background-color #f3f5f6
  .contact-wrapper
    width 750px
    margin 0 auto
    overflow hidden
    h2
      margin-top 100px
      margin-bottom 50px
      text-align center
    .blog-post
      width 100%
      background-color #fff
      box-shadow: 0 1px 2px 0 rgba(171,171,171,0.50);
      border-radius 8px
      overflow hidden
      padding-bottom 40px
      margin-bottom 450px
      .post-image
        width 650px
        margin 0 auto
        height 188px
        background-color #cad7dc
        margin-top 50px
      .title
        margin-left 50px
        margin-top 40px
        h4
          color: #3A3D3E;
      .two-col
        margin-left 50px
        margin-top 20px
        .text
          width 450px
          float left
          p
            color: #7F878A;
        .button
          float left
          width 120px
          margin-top 20px
          margin-left 40px
          a
            text-decoration none
            padding 12px 35px
            border-radius 40px
            border 1px solid #cad7dc
            color #008FB4
            background none
    .one
      .post-image
        background-image url('../images/blog-1.jpg')
        width 650px
        height 188px
        background-position-y -100px
        border-radius 4px
